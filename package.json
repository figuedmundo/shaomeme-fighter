{
  "name": "shaomeme-fighter",
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node --env-file=.env server/index.js",
    "lint": "eslint --ext .js .",
    "lint:fix": "pnpm run lint -- --fix",
    "test": "vitest --run",
    "manager": "pnpm --filter photo-manager-frontend dev",
    "optimize": "node scripts/optimize-assets.js",
    "prepare": "simple-git-hooks"
  },
  "author": "Edmundo Figueroa",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/node": "^22.19.3",
    "canvas": "^3.2.0",
    "commitlint": "^20.2.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jsdom": "^27.3.0",
    "lint-staged": "^13.2.2",
    "prettier": "^3.7.4",
    "simple-git-hooks": "^2.8.1",
    "supertest": "^7.1.4",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit $1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "exif-reader": "^2.0.3",
    "express": "^5.2.1",
    "heic-convert": "^2.1.0",
    "phaser": "^3.90.0",
    "piexifjs": "^1.0.6",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "sharp": "^0.34.5"
  }
}
